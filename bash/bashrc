#!/usr/bin/env bash
# vim:fileencoding=utf-8:foldmethod=marker

# |--- RilCritch's BashRC for the *Underground* Mini PC ---| #
# |--------------------------------------------------------| #
# NOTE: by default openSUSE sources this file in profile so
#       all settings here also take effect in a login shell
#
#	default aliases: /usr/etc/profile.d/alias.bash

# |- Directories ->
BASH_PATH="${HOME}/Repos/underground/bash"

# |- All shell sessions ->
[[ -f "${BASH_PATH}/envvars" ]] && . "${BASH_PATH}/envvars"
[[ -f "${BASH_PATH}/paths" ]] && . "${BASH_PATH}/paths"

[[ $- != *i* ]] && return # Stop script when non-interactive

# |- Interactive shell sessions ->
# Shell behavior
bind "set completion-ignore-case on"
shopt -s autocd
shopt -s cdspell
shopt -s cmdhist
shopt -s histappend
shopt -s expand_aliases
shopt -s dotglob
# shopt -s progcomp_alias
# shopt -s xpg_echo

# Prompt
if [[ -n $(command -v starship) ]]; then
	eval "$(starship init bash)"
else
	PS1='\@ \w ï” '
fi

# |- Startup commands ->
# Go to 'Base' directory ~ alternative $HOME Directory
cd "${HOME}"/Base
. "/home/rc/.local/share/cargo/env"
